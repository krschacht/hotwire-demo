<div class="w-full flex bg-green-100">
  <div id="positions_index" class="w-full sm:w-60 bg-red-100">
    <%= link_to "New position", new_position_path, class: "rounded-lg p-2 bg-blue-600 text-white block font-medium text-center mb-8" %>

    <ul id="positions" class="space-y-4">
      <% @positions.each do |position| %>
        <%= turbo_stream_from position %>
        <li><%= link_to position.title, position, class: "underline" %></li>
      <% end %>
    </ul>
  </div>

  <div class="flex-1 bg-blue-200 pl-0 sm:pl-3"></div>
</div>
